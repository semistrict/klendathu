{
  "name": "@klendathu/e2e-test",
  "version": "0.1.0",
  "description": "End-to-end tests for klendathu",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:playwright": "cd test-app && ../../klendathu-cli/dist/cli.js npx playwright test",
    "test:openai": "KLENDATHU_PROVIDER=openai KLENDATHU_MODEL=gpt-5 vitest run",
    "test:anthropic": "KLENDATHU_PROVIDER=anthropic vitest run",
    "test:google": "KLENDATHU_PROVIDER=google vitest run",
    "test:bedrock": "KLENDATHU_PROVIDER=amazon-bedrock vitest run"
  },
  "dependencies": {
    "klendathu": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.18.12",
    "playwright": "^1.56.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9",
    "zod": "^3.25.76"
  }
}
