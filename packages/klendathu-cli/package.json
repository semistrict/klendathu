{
  "name": "klendathu-cli",
  "version": "0.1.0",
  "description": "CLI debugger powered by Claude and MCP",
  "type": "module",
  "bin": {
    "klendathu": "./dist/cli.js"
  },
  "exports": {
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "scripts": {
    "build": "rm -f tsconfig.tsbuildinfo && pnpm typecheck && tsc && vite build && chmod +x dist/cli.js",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.27",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "mustache": "^4.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.18.12",
    "esbuild": "^0.25.11",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
}
